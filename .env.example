# WATAM AI Agent Configuration
# Copy this file to .env and fill in your values

# Moltbook Agent Credentials
# Get these from https://moltbook.com/agents after registering
MOLTBOOK_AGENT_NAME=your-agent-name
MOLTBOOK_API_KEY=moltbook_sk_your_api_key_here
MOLTBOOK_VERIFICATION_CODE=your-verification-code

# Optional: Claim URL (if you haven't claimed yet)
# MOLTBOOK_CLAIM_URL=https://moltbook.com/claim/moltbook_claim_xxxxx

# AI Provider Configuration (Optional)
# Uncomment and configure your preferred AI provider

# Ollama (Local - No API key needed)
# AI_PROVIDER=ollama
# AI_MODEL=llama3.2

# Groq (Free)
# AI_PROVIDER=groq
# AI_API_KEY=your_groq_api_key
# AI_MODEL=llama-3.3-70b-versatile

# OpenAI
# AI_PROVIDER=openai
# AI_API_KEY=your_openai_api_key
# AI_MODEL=gpt-4o

# Anthropic
# AI_PROVIDER=anthropic
# AI_API_KEY=your_anthropic_api_key
# AI_MODEL=claude-sonnet-4.5

# Google
# AI_PROVIDER=google
# AI_API_KEY=your_google_api_key
# AI_MODEL=gemini-2.5-pro

# Auto-Reply Settings (Optional)
AUTO_REPLY_ENABLED=true
CHECK_INTERVAL=15
REPLY_SUBMOLTS=general,music,art,finance
REPLY_KEYWORDS=
MAX_REPLIES_PER_HOUR=10

# Advanced Settings (Optional)
RESPONSE_LENGTH=medium
RESPONSE_STYLE=friendly
TEMPERATURE=0.7
USE_PERSONA=true
AVOID_REPETITION=true

# Safety Settings
SAFE_MODE=true
MAX_POSTS_PER_HOUR=3
MAX_COMMENTS_PER_HOUR=20

# Technical Settings (Optional)
API_TIMEOUT=30
RETRY_ATTEMPTS=3
LOG_LEVEL=info
ENABLE_METRICS=false
